#!/bin/sh

prompt() {
	if [ -z $DISPLAY ]; then
		fzf --bind=ctrl-space:print-query --prompt "$1" < /dev/stdin
	else
		dmenu -i -p "$1" < /dev/stdin
	fi
}

notify() {
	if [ -z $DISPLAY ]; then
		printf "%s: %s\n" "$1" "$2"
	else
		notify-send "$1" "$2"
	fi
}

getpass() {
	if [ -z $DISPLAY ]; then
		read -s -p "$1"
		echo $REPLY
	else
		dmenu -nb "#A54242" -P -p "$1" <&-
	fi
}
