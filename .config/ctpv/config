preview any_text text/* {{
	bat -p --color=always "${f}" --theme 'Visual Studio Dark+' --tabs 2
}}

preview zip */zip {{
	unzip -l "${f}"
}}

preview pdf */pdf {{
	pdftoppm -f 1 -l 1              \
		-scale-to-x 1920            \
		-scale-to-y -1              \
		-singlefile                 \
		-jpeg -tiffcompression jpeg \
		-x 0 -y 0 -W 1920 -H 3240 \
		-cropbox \
		-- "$f" "$cache_f" && mv -- "$cache_f.jpg" "$cache_f"
	convert_and_show_image
}}
