#!/bin/sh
	H=$(date +%H)
	D=$(date +%u)

if [ 6 -gt "$D" ] && [ 10 -lt "$H" ] && [ "$H" -lt 20 ]; then
	while ! ping -c 1 -W 1 8.8.8.8; do
		sleep 1
	done

	if [ -z "$(pgrep -fo $BROWSER)" ]; then
		$BROWSER \
			--new-window "mail.pcionline.net" \
			--new-window "mail.google.com/mail/u/?authuser=dusan.lesan@pluto.tv" \
			</dev/null >/dev/null 2>&1 &
	fi

	comms
fi

