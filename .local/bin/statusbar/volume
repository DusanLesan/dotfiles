#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.
case $BLOCK_BUTTON in
	1) alacritty --class ",floating" -e "pulsemixer" ;;
	3) pamixer -t ;;
	4) pamixer --allow-boost -i 5 ;;
	5) pamixer --allow-boost -d 5 ;;
esac

[ "$(pacmd list-sinks | awk '/muted/ { print $2 }')" = "yes" ] && echo ï‘¦ && exit

vol="$(pamixer --get-volume)%"
icon="ï©½"

echo "$icon$vol"
