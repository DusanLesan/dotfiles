#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.
case $BLOCK_BUTTON in
	1) st -c floatingSt -e alsamixer -V all ;;
	3) amixer -D pulse set Master 1+ toggle ;;
	4) amixer set Master 5%+ ;;
	5) amixer set Master 5%- ;;
esac

[ $(pacmd list-sinks | awk '/muted/ { print $2 }') = "yes" ] && echo ðŸ”‡ && exit

vol="$(amixer sget Master | grep 'Left:' | awk '{gsub(/[\[\]]/,""); print $5}')"
icon="ðŸ”‰"

echo "$icon$vol"
