#!/bin/sh

directories=`cat $HOME/bin/list-locations`
dirNames="home"
declare -A PLACES
PLACES[home]="$HOME/"

for K in $directories;
do
	n=${K##*/}
	dirNames+="\n"$n
	PLACES[$n]=${K/"~"/$HOME}
done

DIR=$( echo -e $dirNames | dmenu -fn 'Droid Sans Mono-9' -i -p "Places: ")

retVal=$?
if [ $retVal -eq 1 ]; then
	exit 1
fi

if [ ${PLACES[$DIR]} ]; then
	dolphin ${PLACES[$DIR]} </dev/null &
fi
