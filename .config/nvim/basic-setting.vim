let mapleader=" "

" Use system clipboard
set clipboard+=unnamedplus

set mouse=a
syntax on
set ignorecase
set smartcase
set encoding=utf-8
set number relativenumber

" Tab Settings
set shiftwidth=2
set softtabstop=2
set tabstop=2

" Autocompletion
set wildmode=longest,list,full

" Fix splitting
set splitbelow splitright

" Dont fold by default
set nofoldenable

inoremap jk <esc>
inoremap kj <esc>

