#!/bin/sh

# Gives a dmenu prompt to mount unmounted drives and Android phones. If
# they're in /etc/fstab, they'll be mounted automatically. Otherwise, you'll
# be prompted to give a mountpoint from already existsing directories. If you
# input a novel directory, it will prompt you to create that directory.

getmount() { \
	mnt=`echo $1 | dmenu -i -p "Mount point?"`
	if [ ! -d "$mnt" ]; then
		mkdir -p "$mnt"
	fi
}

mountssh() { \
	host=`grep -P "^Host ([^*]+)$" $HOME/.ssh/config | sed 's/Host //' | dmenu -i -p "Mount which host?"` || exit 1
	target=`echo "" | dmenu -i -p "Target mount point?"`
	mnt=`echo $HOME/mnt/$host | dmenu -i -p "Local mount point?"`
	if [ ! -d "$mnt" ]; then
		mkdir "$mnt"
	fi
	sshfs $host:$target $mnt -o follow_symlinks
}

mountusb() { \
	usbdrives=`lsblk -rpo "name,type,size,mountpoint" | grep 'part\|rom' | awk '$4==""{printf "%s (%s)\n",$1,$3}'`
	chosen="$(echo "$usbdrives" | dmenu -i -p "Mount which drive?")" || exit 1
	chosen="$(echo "$chosen" | awk '{print $1}')"
	getmount "$HOME/mnt$chosen"
	sudo -A mount "$chosen" $mnt && notify-send "USB Mounting" "USB device mounted on $mnt"
}

mountandroid() { \
	getmount "$HOME/mnt"
	jmtpfs "$mnt"
	notify-send "Android Mounting" "Android device mounted to $mnt."
}

asktype() { \
	choice="$(printf "USB\\nAndroid\\nSSH" | dmenu -i -p "Mount a USB drive or Android device?")" || exit 1
	case $choice in
		USB) mountusb ;;
		Android) mountandroid ;;
		SSH) mountssh ;;
	esac
}

asktype
