#!/bin/sh

list="
	$HOME/.cache/BraveSoftware
	$HOME/.config/Mattermost/Cache
	$HOME/.config/skypeforlinux/Code*
	$HOME/.config/Skype
	$HOME/.config/skypeforlinux/PredefinedImages
	$HOME/.config/Slack/Code*
	$HOME/.config/Slack/Crash*
	$HOME/.config/Slack/GPUCache
	$HOME/.config/Slack/Session*"

echo $list | while read -r data; do
	rm -rf $data
done

sudo journalctl --vacuum-time=1s
sudo pacman -Scq
rm -rf "/var/tmp/pamac-build-"*

find .config/BraveSoftware/Brave-Browser/* -not \( -path '*Default*' -or -name 'First Run' -or -name 'Local State' -or -name 'chrome_shutdown_ms.txt' \) -delete
find .config/code-oss/user-data/* -not \( -name 'User' -or -name 'storage.json' -or -path '*globalStorage*' -or -name 'settings.json' \) -delete

