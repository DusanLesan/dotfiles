#!/bin/sh

prompt() {
	if [ -z $DISPLAY ] || [ -n "$USE_TERM" ]; then
		[ -z "$2" ] && additionalBind=' --bind=enter:print-query'
		fzf --bind=ctrl-J:print-query --bind=right-click:abort $additionalBind --prompt "$1" <<< "$2"
	else
		dmenu -i -p "$1" <<< "$2"
	fi
}

notify() {
	if [ -z $DISPLAY ]; then
		printf "%s: %s\n" "$1" "$2"
	else
		notify-send "$1" "$2"
	fi
}

getpass() {
	if [ -z $DISPLAY ]; then
		read -s -p "$1"
		echo $REPLY
	else
		dmenu -nb "#A54242" -P -p "$1" <&-
	fi
}

getfilename() {
	name="$1"
	dir="$2"
	if [ -e "$dir$name" ]; then
		name="${1%.*}"
		ext="${1#"$name"}"
		[ -z "$name" ] && [ -n "$ext" ] && name="$ext" && ext=""
		i="${name##*[!0-9]}"
		[ -z "$i" ] && i=1 || name="${name%%$i*}"
		while [ -e "$dir$name$i$ext" ]; do
			((i++))
		done
		name="$name$i$ext"
	fi
	echo "$name"
}

wait() {
	for i in {1..20}; do
		eval "$@" && break || sleep 0.5
	done
}
