preview any_text text/* .lua {{
	bat -p --color=always "${f}" --theme 'Visual Studio Dark+' --tabs 2
}}

preview zip */zip {{
	unzip -l "${f}"
}}

preview audio audio/* {{
	if exists ffmpeg; then
		meta="$(ffmpeg -hide_banner -i "$f" 2>&1)"
		printf '%s\n' "$meta"
		y=$((y + $(printf '%s\n' "$meta" | wc -l)))
	fi
}}

preview image image/* {{
	out="$(image-tag-handler -dpi "$f" 2>/dev/null)"
	(( y += $( wc -l <<< "$out" ) ))
	column -t -s ': ' <<< "$out"
	setup_image
	send_image "$f"
}}
