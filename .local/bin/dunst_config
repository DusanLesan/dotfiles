#!/bin/sh

ACTION=$(echo -e "Primary only\nFollow\nToggle" | dmenu -i -p "Action: ")

retVal=$?
if [ $retVal -eq 1 ]; then
	exit 1
fi

case "$ACTION" in
	"Primary only")
		sed -i -e "s/.*follow =.*/    # follow = keyboard/g" $XDG_CONFIG_HOME/dunst/dunstrc
		pkill dunst
	;;

	"Follow")
		sed -i -e "s/.*follow =.*/    follow = keyboard/g" $XDG_CONFIG_HOME/dunst/dunstrc
		pkill dunst
	;;

	"Toggle")
		dunstctl set-paused toggle
	;;
esac
