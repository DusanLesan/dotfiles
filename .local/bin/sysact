#!/bin/sh

. utils

actions=(
	''
	'bluetooth'
	'dunst'
	'display'
	'lock'
	'logout'
	'sleep'
	'reboot'
	'shutdown'
)

action="$(prompt 'Action:' "$(printf '%s\n' "${actions[@]}")")" &&
case "$action" in
	'dunst') dunst-config ;;
	'bluetooth') dmenu-bluetooth ;;
	'display') display-select ;;
	'lock') slock || kill -9 -1 ;;
	'logout') kill -9 -1 ;;
	'sleep') slock systemctl suspend -i;;
	'reboot') systemctl reboot ;;
	'shutdown') systemctl poweroff ;;
	*) exit 0 ;;
esac
