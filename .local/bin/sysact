#!/bin/sh

. utils

actions=(
	'dunst'
	'display'
	''
	'lock'
	'logout'
	'sleep'
	'reboot'
	'shutdown'
)

action="$(printf '%s\n' "${actions[@]}" | prompt 'Action:')" &&
case "$action" in
	'dunst') dunst_config ;;
	'display') displayselect ;;
	'lock') slock || kill -9 -1 ;;
	'logout') kill -9 -1 ;;
	'sleep') slock systemctl suspend ;;
	'reboot') systemctl reboot ;;
	'shutdown') systemctl poweroff ;;
	*) exit 0 ;;
esac
